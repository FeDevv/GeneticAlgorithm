<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.agroplanner.inventory.controller.InventoryJFXController">
    <top>
        <VBox spacing="5.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
                <Label text="Inventory Composer">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Label text="Select plants and quantities to populate the simulation." textFill="#757575" />
                <Separator prefWidth="200.0" />
            </children>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.35" prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <VBox spacing="15.0">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <children>
                        <Label text="1. Select Category" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="typeCombo" maxWidth="1.7976931348623157E308" onAction="#handleTypeSelection" promptText="Choose Type..." />

                        <Label text="2. Select Variety" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="varietyCombo" disable="true" maxWidth="1.7976931348623157E308" onAction="#handleVarietySelection" promptText="Select Type first..." />

                        <VBox fx:id="varietyDetailsBox" visible="false" style="-fx-background-color: #f5f5f5; -fx-padding: 10; -fx-border-color: #e0e0e0; -fx-border-radius: 5;">
                            <children>
                                <Label fx:id="detailNameLabel" text="Variety Name" style="-fx-font-weight: bold;"/>
                                <Label fx:id="detailDistanceLabel" text="Min Dist: -"/>
                                <Label fx:id="detailAuthorLabel" text="Author: -" textFill="#666666" style="-fx-font-size: 10px;"/>
                            </children>
                        </VBox>

                        <Label text="3. Quantity" style="-fx-font-weight: bold;" />
                        <Spinner fx:id="quantitySpinner" editable="true" maxWidth="1.7976931348623157E308" />

                        <Button fx:id="addButton" defaultButton="true" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleAddAction" text="Add to Inventory" style="-fx-background-color: #2e7d32; -fx-text-fill: white;" />

                        <Label fx:id="feedbackLabel" textFill="#d32f2f" wrapText="true" />

                        <VBox fx:id="agronomistPanel" alignment="CENTER" spacing="5.0" visible="false">
                            <Separator />
                            <Label text="Agronomist Tools" style="-fx-font-weight: bold; -fx-text-fill: #1565c0;" />
                            <Button text="Create New Variety..." maxWidth="1.7976931348623157E308" onAction="#handleCreateNewVarietyAction"/>
                        </VBox>
                    </children>
                </VBox>

                <VBox>
                    <children>
                        <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colName" prefWidth="150.0" text="Variety" />
                                <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                                <TableColumn fx:id="colRadius" prefWidth="80.0" text="Min Dist (m)" />
                                <TableColumn fx:id="colQty" prefWidth="80.0" text="Qty" />
                                <TableColumn fx:id="colAuthor" prefWidth="100.0" text="Author" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>

                        <HBox alignment="CENTER_RIGHT" spacing="10.0" style="-fx-background-color: #eee;">
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                            <children>
                                <Label fx:id="totalCountLabel" text="Total Plants: 0" style="-fx-font-weight: bold;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#handleCancelAction" text="Cancel" />
                <Button fx:id="proceedButton" disable="true" mnemonicParsing="false" onAction="#handleProceedAction" style="-fx-font-size: 14px; -fx-base: #1976d2;" text="Confirm Inventory &gt;" />
            </children>
        </HBox>
    </bottom>
</BorderPane>