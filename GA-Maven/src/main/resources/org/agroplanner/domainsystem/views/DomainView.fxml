<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="500.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.agroplanner.domainsystem.controllers.DomainJFXController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <children>
                <Text text="Definizione Dominio">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Text>
                <Label text="Configura la geometria del campo di lavoro" textFill="#757575" />
            </children>
        </VBox>
    </top>
    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets left="40.0" right="40.0" top="10.0" />
            </padding>
            <children>
                <VBox spacing="5.0">
                    <children>
                        <Label text="Seleziona Forma:" style="-fx-font-weight: bold;" />
                        <ComboBox fx:id="domainTypeCombo" maxWidth="1.7976931348623157E308" onAction="#handleTypeSelection" promptText="Scegli una geometria..." />
                    </children>
                </VBox>

                <Separator />

                <Label text="Parametri:" style="-fx-font-weight: bold;" />
                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
                    <content>
                        <VBox fx:id="dynamicFormContainer" spacing="15.0">
                            <children>
                                <Label text="Seleziona un tipo per vedere i parametri." textFill="#9e9e9e" style="-fx-font-style: italic;" />
                            </children>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
    <bottom>
        <VBox spacing="10.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="40.0" right="40.0" top="10.0" />
            </padding>
            <children>
                <Label fx:id="feedbackLabel" textFill="#d32f2f" wrapText="true" />
                <Button fx:id="createButton" defaultButton="true" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCreateAction" style="-fx-background-color: #1976d2; -fx-text-fill: white;" text="Crea Dominio" />
            </children>
        </VBox>
    </bottom>
</BorderPane>
