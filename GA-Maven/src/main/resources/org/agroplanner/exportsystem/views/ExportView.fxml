<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.agroplanner.exportsystem.controllers.ExportJFXController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Esporta Risultati">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Salva il tuo progetto per usi futuri." textFill="#757575" />

        <Separator prefWidth="200.0" />

        <VBox alignment="CENTER_LEFT" maxWidth="400.0" spacing="10.0">
            <children>
                <Label text="Formato di Esportazione:" style="-fx-font-weight: bold;" />
                <VBox fx:id="formatContainer" spacing="5.0">
                </VBox>
            </children>
        </VBox>

        <VBox alignment="CENTER_LEFT" maxWidth="400.0" spacing="10.0">
            <children>
                <Label text="Nome File (senza estensione):" style="-fx-font-weight: bold;" />
                <TextField fx:id="filenameField" promptText="es. progetto_maggio" />
                <Label text="* Solo lettere, numeri, trattini e underscore." textFill="#9e9e9e" style="-fx-font-size: 10px;" />
            </children>
        </VBox>

        <Separator maxWidth="400.0" />

        <Label fx:id="feedbackLabel" textFill="#d32f2f" wrapText="true" />


        <HBox alignment="CENTER_RIGHT" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCloseAction" text="Torna alla Dashboard" />

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="exportButton" defaultButton="true" mnemonicParsing="false" onAction="#handleExportAction" style="-fx-base: #1976d2; -fx-text-fill: white;" text="Esporta PDF / Excel" />
            </children>
        </HBox>

        <VBox fx:id="guestLockPanel" alignment="CENTER" spacing="10.0" visible="false" style="-fx-background-color: rgba(255,255,255,0.9);">
            <Label text="ðŸ”’ FunzionalitÃ  Bloccata" style="-fx-font-weight: bold; -fx-text-fill: #d32f2f; -fx-font-size: 16px;" />
            <Label text="L'esportazione Ã¨ disponibile solo per gli utenti registrati." />
        </VBox>
    </children>
</VBox>
