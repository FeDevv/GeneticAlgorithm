<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.agroplanner.exportsystem.controllers.ExportJFXController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
    <children>
        <Label text="Export Results">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>
        <Label text="Save your project report for future use." textFill="#757575" />

        <Separator prefWidth="200.0" />

        <VBox alignment="CENTER_LEFT" maxWidth="400.0" spacing="10.0">
            <children>
                <Label text="Export Format:" style="-fx-font-weight: bold;" />
                <VBox fx:id="formatContainer" spacing="5.0">
                </VBox>
            </children>
        </VBox>

        <VBox alignment="CENTER_LEFT" maxWidth="400.0" spacing="10.0">
            <children>
                <Label text="Filename (no extension):" style="-fx-font-weight: bold;" />
                <TextField fx:id="filenameField" promptText="e.g. project_may_2024" />
                <Label text="* Only letters, numbers, dashes and underscores." textFill="#9e9e9e" style="-fx-font-size: 10px;" />
            </children>
        </VBox>

        <Separator maxWidth="400.0" />

        <VBox alignment="CENTER" spacing="5.0">
            <Label fx:id="feedbackLabel" textFill="#d32f2f" wrapText="true" />
            <TextField fx:id="resultPathField" editable="false" visible="false" style="-fx-background-color: #e8f5e9; -fx-text-fill: #2e7d32;" alignment="CENTER"/>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="15.0">
            <children>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCloseAction" text="Back to Dashboard" />

                <Region HBox.hgrow="ALWAYS" />

                <Button fx:id="exportButton" defaultButton="true" mnemonicParsing="false" onAction="#handleExportAction" style="-fx-base: #1976d2; -fx-text-fill: white;" text="Export" />
            </children>
        </HBox>

        <VBox fx:id="guestLockPanel" alignment="CENTER" spacing="10.0" visible="false" style="-fx-background-color: rgba(255,255,255,0.95); -fx-padding: 20; -fx-border-color: #d32f2f; -fx-border-radius: 5;">
            <Label text="ðŸ”’ Feature Locked" style="-fx-font-weight: bold; -fx-text-fill: #d32f2f; -fx-font-size: 16px;" />
            <Label text="Exporting reports is available for registered users only." />
        </VBox>
    </children>
</VBox>