            </children>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Button mnemonicParsing="false" onAction="#handleLogout" style="-fx-background-color: #d32f2f; -fx-text-fill: white;" text="Logout" />
            </children>
        </HBox>
    </bottom>
