<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.agroplanner.persistence.controllers.PersistenceJFXController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label text="Load Session">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label text="Select a saved solution to restore." textFill="#757575" />

        <TableView fx:id="solutionsTable" prefHeight="300.0" prefWidth="550.0">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="250.0" text="Title" />
                <TableColumn fx:id="dateColumn" prefWidth="150.0" text="Date Created" />
                <TableColumn fx:id="scoreColumn" prefWidth="100.0" text="Fitness" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <Label fx:id="statusLabel" textFill="#d32f2f" />

        <HBox alignment="CENTER" spacing="15.0">
            <children>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
                <Button fx:id="loadButton" defaultButton="true" disable="true" mnemonicParsing="false" onAction="#handleLoadConfirm" style="-fx-background-color: #1976d2; -fx-text-fill: white;" text="Load Selected" />
            </children>
        </HBox>
    </children>
</VBox>